{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "@typescript-eslint/no-unused-vars": ["warn"],
    "no-case-declarations": "warn",
    "@typescript-eslint/no-this-alias": "warn",
    "no-extra-semi": "warn",
    "no-unreachable": "warn"
  },
  "globals": {
    "process": "readonly",
    "module": "readonly",
    "firebase": "readonly",
    "gtag": "readonly",
    "fbq": "readonly",
    "dataLayer": "readonly",
    "__dirname": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
